body {
        background: white;
        color: #696969;
	font-family: "Bitstream Vera Sans", sans-serif;
        margin: 0;
        padding: 0;
        text-align: left;
        font-size: 90%;

	border-right: 1px solid black;
	margin-right: 230px;
	padding-left: 10px;
	padding-right: 20px;
}

a {
        color: darkblue;
        text-decoration: none;
}

h1 {
	margin-top: 0px;
	padding-top: 20px;

	font-weight: normal;
	letter-spacing: -2px;
	text-transform: lowercase;
	text-align: right;
	border: 1px solid black
	color: darkblue;
}

h2 {
	color: #cc0000;
        font-size: 1.2em;
        letter-spacing: 0.1em;
        margin: 15px 0 2px 0;
        padding-bottom: 2px;
}


h3 {
 	background: lightgrey;
	border: 1px solid black
        margin: 0;
        padding: 4px;
        font-size: 1.3em;
        font-family: verdana, helvetica, sans-serif;
        font-weight: bold;
}



h3 a {
	text-decoration: none;
	color: inherit;
}


h4 {
	color:	darkblue;
	font-family: "Bitstream Vera Sans", sans-serif;
	border: 1px solid black
        margin: 0;
        font-size: 1.0em;
        font-weight: bold;
}



h4 a {
	text-decoration: none;
	color: inherit;
}

img {
    	border : 0;
}

img.face {
	float: right;
	margin-top: -49px;
}

.entry {
	margin-bottom: 2em;
}

.entry h3 {
        background: none;
        border: none;
        font-size: 1em;
        padding: 0px;
}

.entry .date {
	font-family: "Bitstream Vera Sans", sans-serif;
	color: grey;
}

.entry .date a {
	text-decoration: none;
	color: inherit;
}

.sidebar {
	position: absolute;
	top: 0px;
	right: 0px;
	width: 230px;

	margin-left: 0px;
	margin-right: 0px;
	padding-right: 0px;

        background: white;
	padding-top: 20px;
	padding-left: 0px;

	font-family: "Bitstream Vera Sans", sans-serif;
	font-size: 85%;
}

.sidebar h2 {
	font-size: 110%;
	font-weight: bold;
	color: black;

	padding-left: 5px;
	margin-left: 0px;
}

.sidebar ul {
	padding-left: 2em;
	margin-left: 0px;

	list-style-type: square;
}

.sidebar ul li:hover {
	color: grey;
}

.sidebar p {
	border-top: 1px solid grey;
	margin-top: 30px;
	padding-top: 10px;

	padding-left: 5px;
}

a:hover {
	text-decoration: underline !important;
	color: blue !important;
}
